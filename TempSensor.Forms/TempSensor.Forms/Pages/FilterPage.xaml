<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TempSensor.Forms.Pages.FilterPage">
  <StackLayout>
    <Label Text="Select a time to show:" VerticalOptions="Center" HorizontalOptions="Center" />
    <TimePicker Grid.Row="1" Time="{Binding SelectedTime, Mode=TwoWay}" />
  </StackLayout>
</ContentPage>